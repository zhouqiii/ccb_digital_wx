/* pages/platfrom/platfrom.wxss */

.platform{
  height: 100%;
  font-size: 24rpx;
  color: #333333;
  /* padding-bottom: 10px; */
  background: #ffffff;
}
.flex_row,.tab_time, .tab_time_next{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row_btw{
  justify-content: space-between;
}
.tab_sticky{
  padding: 20rpx 0;
  background: #ffffff;
  margin: 0 16px;
}
.tab_chart{
  margin: 0 16px;
  background: #f6f6f6;
  border-radius: 4px;
}
.tab_time, .tab_time_next{
  height: 50rpx;
  line-height: 50rpx;
  background: #f6f6f6;
  border-radius: 2px;
}
.time_text{
  min-width: 160rpx;
}
.time_line{
  margin: 0 20rpx;
}
.titleMax{
  font-size: 32rpx;
}
.barPart,.linePart,#line_efficiency_three,#line_efficiency_six{
  width: 48%;
  margin-top: 10px;
  background: rgb(228, 225, 225);
  border: 1px solid rgb(228, 225, 225);
  border-radius: 10px;
}
.marTop{
  margin-top: 10px;
  background: rgb(228, 225, 225);
  border: 1px solid rgb(228, 225, 225);
  border-radius: 10px;
}
/*时间组件主题修改开始*/
.van-cell{
  padding: 0 !important;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(0, 204, 255, 0.2) !important;
}
.van-field__control{
  font-size:24rpx;
  color: #333333;
  text-align: center !important;

}
.van-cell__right-icon-wrap{
  color: #333333 !important;
  margin-left: 20rpx;
  font-size: 12px !important;
}
/*时间组件主题修改结束*/