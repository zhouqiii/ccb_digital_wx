/**index.wxss**/
.tableTitle{
  text-align: center;
  font-size: 28rpx;
  font-weight: normal;
  color: '#333333';
  height: 36rpx;
  line-height: 36rpx;
  margin-bottom: 10rpx;
}
.tableView{
  /* border:1px solid rgba(0, 204, 255, 0.2); */
  border-right:0;
  border-bottom: 0;
  width: 100%;
}
/* 表头 */
.table_header{
  background: #f6f6f6;
  font-weight: bold;
} 
/* 表格cell */
.table_cell,.table_header{
  display: flex;
  justify-content: space-between; /* 项目位于各行之间留有空白的容器内。 */
  width: 100%;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}
.th{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  /* border-bottom: 1px solid rgba(0, 204, 255, 0.2); */
  /* border-right: 1px solid rgba(0, 204, 255, 0.2); */
}
.th1,.th2,.td1,.td2{
  width: 50%
}
.filter, .sort{
  margin-top: 5rpx;
  margin-left: 60rpx;
  width: 30rpx;
  height: 30rpx;
}
