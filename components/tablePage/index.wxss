}
.td1{
  width: 20%;
}
.td2{
  width: 30%;
}
.th_sin{
  width: 20%;
}
.thCplex{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 60rpx;
  /* border-bottom: 1px solid rgba(0, 204, 255, 0.2);
  border-right: 1px solid rgba(0, 204, 255, 0.2); */
